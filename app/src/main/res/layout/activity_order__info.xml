<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Info">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/dishimg"
            android:layout_width="421dp"
            android:layout_height="229dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@android:drawable/ic_menu_report_image"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tvChefffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Chef name"
                android:textStyle="bold"
                android:layout_marginRight="140dp"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvDishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Dish name"
                android:textStyle="bold"
                android:textSize="25dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Price     "
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/tvdish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Price     "
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Catagory    "
                    android:layout_marginLeft="20dp"
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/tvdishcata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:text="Catagory    "
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Available Quantity"
                android:textSize="17dp" />
                <TextView
                    android:id="@+id/Av_quant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:text="Quantity"
                    android:textSize="20dp" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="450dp"
        android:orientation="vertical"
        android:gravity="center"
        >


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Type" />
        <EditText
            android:id="@+id/quantity"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:digits="123456789"
            android:hint="Enter Quantity"
            android:inputType="number"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/btn_addtobasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
            android:background="@drawable/btn_round"
            android:text="Checkout" />
    </LinearLayout>



</RelativeLayout>